<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--base item text appearance-->
    <style name="base_item_text_appearance" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--loan list item appearance-->
    <style name="loan_list_item_appearance" parent="base_item_text_appearance">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="search_item_appearance" parent="base_item_text_appearance">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="search_setting_text_appearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BookDetailExpandedTitleAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BookStateTableTextItemAppearance">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">1px</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    <style name="BookDetailActivitySubtitleAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="BookStateTableTextItemAppearanceBold" parent="BookStateTableTextItemAppearance">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SearchSettingDialogTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
