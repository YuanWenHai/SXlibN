<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/item_fragment_loan_list_icon"
        android:layout_marginStart="10dp"
        android:background="@drawable/circle_light_blue"
        android:gravity="center"
        android:text="借"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item_fragment_loan_list_icon"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/item_fragment_loan_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="骑士的沙丘"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_fragment_loan_list_location"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="社科图书第二阅览室"
                style="@style/loan_list_item_appearance" />
            <TextView
                android:id="@+id/item_fragment_loan_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2017-06-18"
                android:layout_marginEnd="10dp"
                style="@style/loan_list_item_appearance"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>