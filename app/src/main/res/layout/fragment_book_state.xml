<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:id="@+id/fragment_book_state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_state"
        android:layout_marginBottom="10dp"
        style="@style/BookDetailActivitySubtitleAppearance"/>
    <com.will.sxlib.bookDetail.view.CustomHorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_book_state_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.will.sxlib.bookDetail.view.CustomHorizontalScrollView>
</LinearLayout>

