<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/search_way"
            style="@style/SearchSettingDialogTextStyle"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/dialog_search_setting_spinner_search_way"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:text="@string/sort_way"
            style="@style/SearchSettingDialogTextStyle"/>


        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/dialog_search_setting_spinner_sort_way"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:text="@string/sort_order"
            style="@style/SearchSettingDialogTextStyle"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/dialog_search_setting_spinner_sort_order"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>